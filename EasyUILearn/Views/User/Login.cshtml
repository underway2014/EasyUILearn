
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Content/EasyUI/jquery.min.js"></script>
    <script src="~/Content/EasyUI/jquery.easyui.min.js"></script>

    <link href="~/Content/EasyUI/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/EasyUI/themes/icon.css" rel="stylesheet" />
    <link href="~/Content/EasyUI/themes/color.css" rel="stylesheet" />
</head>
<body>
    <div id="win" class="easyui-window" title="登&nbsp;陆" style="width:300px;height:200px;text-align:center;margin-bottom:20px;"
         data-options="modal:true,closable:false,draggable:false,resizable:false,collapsible:false,minimizable:false,maximizable:false">
        <table style="margin:0 auto;padding-top:20px;">
            <tr>
                <td>用户名:</td>
                <td><input type="text" id="name" /></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>密　码:</td>
                <td><input type="password" id="pw" /></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
        </table>
        <input type="button" id="submit" value="Submit" />
        <p id="dresult"></p>
    </div>
    <script>
        $('#submit').on('click', function () {
            $.ajax({
                type: "get",
                url: "/User/DoLogin",
                data: {
                    name: $('#name').val(),
                    passWord:$("#pw").val()
                },
                success: function (msg) {
                    //alert("Data Saved: " + msg);
                    if (msg == 1)
                    {
                        $('#dresult').text("登陆成功！");
                        window.location.href = "/Home/Index";
                        
                    } else {
                        $('#dresult').text("用户名或密码错误！");
                    }
                }
            });
        });
    </script>
</body>
</html>
